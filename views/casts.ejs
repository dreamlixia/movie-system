<!DOCTYPE html>
<html>
	<meta name="referrer" content="no-referrer">
  <head>
    <title>后台管理系统-演员管理</title>
    <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="/stylesheets/font-awesome.min.css">
  <!-- Ionicons -->
  <link rel="stylesheet" href="/stylesheets/ionicons.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="/admin-lte/dist/css/AdminLTE.min.css">
  <!-- AdminLTE Skins. We have chosen the skin-blue for this starter
        page. However, you can choose any other skin. Make sure you
        apply the skin class to the body tag so the changes take effect.
  -->
  <link rel="stylesheet" href="/admin-lte/dist/css/skins/skin-blue.min.css">
	
	<style>
		.pagingClass {
			width:30px;
		}
	</style>
  </head>
  <body class="hold-transition skin-blue sidebar-mini">
   <div class="wrapper">

	 
		<%- include('./header.ejs') %>
		<%- include('./menu.ejs') %> 
<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
				演员管理
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
        <li class="active">Here</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">

      <!-- Your Page Content Here -->
			<div class="box">
            <div class="box-header">
							<a href='/addCastRoute'><button class='btn btn-xs btn-success'>添加演员</button></a>
							<% if (result.length !== 0){ %>
									
									<div class='pull-right'>
										<a href='/castspaging?limitNum=<%= limitNum * totalNum %>&skipNum=0'><button class='btn btn-xs btn-primary'>显示全部数据</button></a>
										<a href="/castspaging?limitNum=<%= limitNum %>&skipNum=0"><button class='btn btn-xs btn-default'>首页</button></a>
										<button class='btn btn-xs btn-default' onclick="goPrevPage(<%= skipNum %>,<%= limitNum %>)">上一页</button>
										<input type='text' id='pageCode' onchange='turnToPage(<%= limitNum %>, <%= totalNum %>)' value="<%= skipNum + 1 %>" class='pagingClass' value="<%= skipNum + 1 %>"/>
										/
										<input type='text' disabled class='pagingClass' value="<%= totalNum %>"/>
										<button class='btn btn-xs btn-success' onclick="goNextPage(<%= skipNum %>,<%= limitNum %>,<%= totalNum %>)">下一页</button>
										<a href='/castspaging?limitNum=<%= limitNum %>&skipNum=<%= totalNum - 1 %>'><button class='btn btn-xs btn-success' >尾页</button></a>
										每页显示
										<select id="limitNum" onchange="selectLimitNum()">
											<option value='5' <%= limitNum == 5 ? 'selected' : ''%>>5</option>
											<option value='10' <%= limitNum == 10 ? 'selected' : ''%>>10</option>
											<option value='15' <%= limitNum == 15 ? 'selected' : ''%>>15</option>
										</select>
										个
									</div>
							
							
							<% } %>
            <!-- /.box-header -->
            <div class="box-body no-padding">
              <table class="table table-string table-bordered">
                <tbody><tr>
                  <th class='text-center'>#</th>
									<th class='text-center'>名字</th>
									<th class='text-center'>照片</th>
									<th class='text-center'>操作</th>
                </tr>
								<% if (result.length == 0){ %>
									<tr>
										<td class='text-center' colspan='4'>没有数据</td>
									</tr>
								<%  }else{ %>
											<%	for( var i = 0;i < result.length;i ++ ){	%>
										<tr class='text-center'>
											<td> <%= i+1 %> </td>
											<td> <%= result[i].name %> </td>
											<td> <img src="<%= result[i].avatars.small %>" style="height:60px;width:auto"/> </td>
											<td>
												<a href='/updateCastRoute?id=<%= result[i].id %>&skipNum=<%= skipNum %>&limitNum=<%= limitNum %>'><button class='btn btn-xs btn-warning'>编辑</button></a>
												<a href='/deleteCastRoute?id=<%= result[i].id %>&skipNum=<%= skipNum %>&limitNum=<%= limitNum %>'><button class='btn btn-xs btn-danger'>删除</button></a>
											
										</tr>
								<%	}  %>	
								<%	}	 %>
								
								
								
								
              </tbody></table>
            </div>
            <!-- /.box-body -->
          </div>
					
					
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
		<%- include('./footer.ejs') %> 
		<%- include('./sidebar.ejs') %> 
		
		
</div>
  </body>
  <script src="/javascripts/jquery.min.js"></script>
<!-- Bootstrap 3.3.6 -->
<script src="/bootstrap/dist/js/bootstrap.min.js"></script>
<!-- AdminLTE App -->
<script src="/javascripts/app.min.js"></script>

<script>
function turnToPage( limitNum, totalNum ){
		var skipNum = $('#pageCode').val() * 1;
		skipNum = skipNum < 0 ? 0 : skipNum;
		skipNum = skipNum > totalNum ? totalNum - 1 : skipNum;
		
		window.location.href = '/castspaging?limitNum=' + limitNum + '&skipNum=' + skipNum;
	}

function goPrevPage( skipNum, limitNum ){
		var skipNum = skipNum - 1;
		if( skipNum <= 0){
			 skipNum = 0;
		}
		window.location.href = '/castspaging?limitNum=' + limitNum + '&skipNum=' + skipNum;
	}

	function goNextPage( skipNum, limitNum, totalNum ){
		var skipNum = skipNum * 1 + 1;
		if( skipNum >= totalNum){
			 skipNum = totalNum - 1;
		}
		window.location.href = '/castspaging?limitNum=' + limitNum + '&skipNum=' + skipNum;
	}
	
	function selectLimitNum(){
		var limitNum = $("#limitNum").val();
		
		window.location.href = '/castspaging?limitNum=' + limitNum + '&skipNum=0';
	}
</script>
</html>
